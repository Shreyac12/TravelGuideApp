<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".Aalankritha_Resort">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:elevation="8dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/aalankritha_resort" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/alan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#D6E4F1"
                android:fontFamily="@font/abril_fatface"
                android:gravity="center|left"
                android:text="  Aalankritha Resort"
                android:textColor="#8E2D0F"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="3dp"
                    android:layout_margin="8dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:id="@+id/website"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E6E6E6"
                        android:fontFamily="@font/rubik_medium"
                        android:gravity="center"
                        android:text="Website"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="3dp"
                    android:layout_margin="8dp"
                    app:cardElevation="5dp"
                    android:layout_marginRight="3dp" >

                    <TextView
                        android:id="@+id/direction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E5E5E5"
                        android:fontFamily="@font/rubik_medium"
                        android:gravity="center"
                        android:text="Direction"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center|left"
                android:text=" Resort in Hyderabad"
                android:textColor="#575757"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#CF6E41"
                    app:cardCornerRadius="10dp" >

                    <Button
                        android:id="@+id/booking"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#CF6E41"
                        android:fontFamily="@font/rubik_medium"
                        android:text="BOOK"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18dp"
                android:layout_weight="18"
                android:background="#CE6E41" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"






                android:lineSpacingExtra="3dp"
                android:text="Set on lush grounds, this laid-back resort is 6 km from both Shamirpet Lake and Shamirpet Deer Park.


Ranging from rooms and suites to villas, the casual quarters offer free Wi-Fi, flat-screen TVs and minibars, plus safes, and tea and coffeemaking equipment. Some have separate sitting areas, terraces and/or private outdoor pools.

Breakfast is complimentary. Dining options consist of 3 restaurants and a cafe. Other amenities include an outdoor pool, a water park and 3 game rooms, plus an indoor pool, sports facilities and a salon. There's also a spa, a gym, and meeting and event space."
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="3dp"
                android:text="@string/address_text"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="3dp"
                android:text="@string/phone"
                android:textColor="#000000"
                android:textSize="15dp" />





            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="6dp"
                    android:layout_width="185dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aalankritha_resort2"/>

                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_width="185dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aalankritha_resort3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="6dp"
                    android:layout_width="185dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aalankritha_resort1"/>

                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_width="185dp"
                    android:scaleType="fitCenter"
                    android:layout_height="200dp"
                    android:src="@drawable/aalankritha_resort4"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>